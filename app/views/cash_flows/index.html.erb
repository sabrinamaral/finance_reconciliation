<h1>Cash Flow</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @cash_flow_records.each do |record| %>
      <tr>
        <td><%= record.date %></td>
        <td><%= record.description %></td>
        <td><%= record.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
